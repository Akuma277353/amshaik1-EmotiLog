<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="My EmotiLog"
            android:textSize="22sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="9"
            android:useDefaultMargins="true"
            android:layout_marginTop="12dp">


            <Button
                android:id="@+id/btnHappy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:onClick="onEmotionClick"
                android:tag="Happy"
                android:text="ðŸ˜„ Happy" />


            <Button
                android:id="@+id/btnAngry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:onClick="onEmotionClick"
                android:tag="Angry"
                android:text="ðŸ˜¡ Angry" />


            <Button
                android:id="@+id/btnMindblown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:onClick="onEmotionClick"
                android:tag="Mindblown"
                android:text="ðŸ¤¯ Mindblown" />


            <Button
                android:id="@+id/btnFreaky"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:onClick="onEmotionClick"
                android:tag="Freaky"
                android:text="ðŸ‘… Freaky" />


            <Button
                android:id="@+id/btnTired"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:onClick="onEmotionClick"
                android:tag="Tired"
                android:text="ðŸ˜´ Tired" />


            <Button
                android:id="@+id/btnScared"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:onClick="onEmotionClick"
                android:tag="Scared"
                android:text="ðŸ˜± Scared" />

            <Button
                android:id="@+id/btnSick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:onClick="onEmotionClick"
                android:tag="Sick"
                android:text="ðŸ¤’ Sick" />


            <Button
                android:id="@+id/btnHeartbroken"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:onClick="onEmotionClick"
                android:tag="Heartbroken"
                android:text="ðŸ’” Heartbroken" />
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">


            <Button
                android:id="@+id/btnEvents"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:onClick="onOpenEvents"
                android:text="View Events" />


            <Space
                android:layout_width="16dp"
                android:layout_height="1dp" />


            <Button
                android:id="@+id/btnSummary"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:onClick="onOpenSummary"
                android:text="View Summary" />

            <Space
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear Logs"
                android:onClick="onClearLogs"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>